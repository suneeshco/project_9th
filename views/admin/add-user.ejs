<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UMS</title>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> -->
    <script src="https://kit.fontawesome.com/b600cb21a6.js" crossorigin="anonymous"></script>
</head>
<body>
    <form action="" method="POST">

        <div class="row form-group mb-4">
          <div class="col">
            <label for="firstName">Name</label>
            <input type="text" class="form-control w-50" id="firstName" name="name" value="" placeholder="Name" required>
          </div>
          </div>
      
          <div class="row form-group mb-4">
          <div class="col">
            <label for="email">Email</label>
            <input type="text" class="form-control w-50" id="email" name="email" value="" placeholder="Email" required>
          </div>
        </div>
      
      
        <div class="row form-group mb-4">
          <div class="col">
            <label for="tel">Mobile</label>
            <input type="text" class="form-control w-50" id="tel" name="mno" value="" placeholder="Mobile" required>
          </div>
          </div>
      
          <div class="row form-group mb-4">
            <div class="col">
              <label for="password">Password </label>
              <input type="text" class="form-control w-50" id="password" name="password" value="" placeholder="password" required>
            </div>
            </div>
      
      
      
        <div class="form-group mb-4">
          <button type="submit" class="btn btn-primary">Add User</button>
        </div>
      
      </form>
      <% 
      
      if(typeof message !== 'undefined'){
         %>
           <p style="color: red;"><%= message %></p>
         <%
      }
      
      %>  
      
      <a href="/admin/dashboard">Go Back</a>
</body>
</html>